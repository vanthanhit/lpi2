# LAMP Stack with Wordpress
# L = Linux Ubuntu 22.04
# A = Apache
# M = MySQL 8
# P = PHP 8

# Prepare Ubuntu
sudo apt install -y open-vm-tools
sudo apt update -y
sudo apt upgrade -y

# Install Apache
sudo apt install -y apache2
sudo systemctl start apache2
sudo systemctl enable apache2

# Secure Apache with Let's Encrypt
sudo apt install certbot python3-certbot-apache
sudo vi /etc/apache2/sites-available/thanhlpi.website.conf (Replace kbuor.website by your domain)

        # Add the content bellow, replace thanhlpi.website by your domain
        <VirtualHost *:80>
          ServerName thanhlpi.website
          ServerAlias www.thanhlpi.website

          ServerAdmin admin@thanhlpi.website
          DocumentRoot /var/www/html

          ErrorLog ${APACHE_LOG_DIR}/error.log
          CustomLog ${APACHE_LOG_DIR}/access.log combined

        </VirtualHost
        
sudo apache2ctl configtest
sudo certbot --apache

# Install MySQL Server
sudo apt install mysql-server
sudo mysql (Login by LINUX ROOT USER PASSWORD)
> ALTER USER 'root'@'localhost' IDENTIFIED WITH mysql_native_password by '3@1234.5678'; (replace P@ssw0rd by your password for SQL Root Password)
> EXIT;
sudo mysql_secure_installation (login by MYSQL ROOT PASSWORD)
sudo mysql -u root -p (login by MYSQL ROOT PASSWORD)
> CREATE DATABASE wordpress DEFAULT CHARACTER SET utf8 COLLATE utf8_unicode_ci;
> CREATE USER 'wpuser'@'%' IDENTIFIED WITH mysql_native_password BY 'P@ssw0rd';
> GRANT ALL ON wordpress.* TO 'wpuser'@'%';
> FLUSH PRIVILEGES;
> EXIT;


# Install PHP
sudo apt update -y
sudo apt install php libapache2-mod-php php-mysql
sudo apt install php-curl php-gd php-mbstring php-xml php-xmlrpc php-soap php-intl php-zip -y
sudo systemctl restart apache2

# Download Wordpress
sudo mkdir -p /var/www/thanhlpi.website
cd /tmp
curl -O https://wordpress.org/latest.tar.gz
tar xzvf latest.tar.gz
cp /tmp/wordpress/wp-config-sample.php /tmp/wordpress/wp-config.php
mkdir /tmp/wordpress/wp-content/upgrade
sudo cp -a /tmp/wordpress/. /var/www/thanhlpi.website/
sudo chown -R www-data:www-data /var/www/thanhlpi.website/
sudo find /var/www/thanhlpi.website/ -type d -exec chmod 750 {} \;
sudo find /var/www/thanhlpi.website/ -type f -exec chmod 640 {} \;
curl -s https://api.wordpress.org/secret-key/1.1/salt/

