# Configure Apache Virtual host
sudo vi /etc/apache2/sites-available/thanhlpi.website.conf (Replace kbuor.website by your domain)
      
          # Add the content bellow, replace kbuor.website by your domain
          <VirtualHost *:80>
            ServerName thanhlpi.website
            ServerAlias www.thanhlpi.website

            Redirect permanent / https://thanhlpi.website/
          </VirtualHost>

          <VirtualHost *:443>
            ServerName thanhlpi.website
            ServerAlias www.thanhlpi.website

            Protocols h2 http/1.1

            <If "%{HTTP_HOST} == 'www.thanhlpi.website'">
              Redirect permanent / https://thanhlpi.website/
            </If>

            DirectoryIndex index.html index.php
            DocumentRoot /var/www/thanhlpi.website

            ErrorLog ${APACHE_LOG_DIR}/thanhlpi.website-error.log
            CustomLog ${APACHE_LOG_DIR}/thanhlpi.website-access.log combined

            SSLEngine On
            SSLCertificateFile /etc/letsencrypt/live/thanhlpi.website/cert.pem
            SSLCertificateKeyFile /etc/letsencrypt/live/thanhlpi.website/privkey.pem
            SSLCertificateChainFile /etc/letsencrypt/live/thanhlpi.website/chain.pem

            <Directory /var/www/thanhlpi.website>
                Options FollowSymLinks
                AllowOverride All
                Require all granted
            </Directory>

          </VirtualHost>


sudo a2ensite thanhlpi.website
sudo systemctl restart apache2





